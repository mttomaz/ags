{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "experimentalDecorators": true,
        "jsx": "react-jsx",
        "jsxImportSource": "astal/gtk3",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "paths": {
            "@assets/*": [
                "./assets/*"
            ],
            "@common/*": [
                "./common/*"
            ],
            "@widgets/*": [
                "./widgets/*"
            ],
            "@windows/*": [
                "./windows/*"
            ],
            "@utils/*": [
                "./utils/*"
            ]

        },
        "strict": true,
        "target": "ES2022"
    }
}
